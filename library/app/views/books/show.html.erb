<p id="notice"><%= notice %></p>
<div class="card">
  <div class="card-header">
    <div class="jumbotron">
      <span class="label label-primary"> Last update <%= @book.updated_at.strftime("%b %d, %Y") %></span>
    </div>
  </div>
  <div class="card-body">
    <div class="panel-body">
      <p>
        <strong>Title:</strong>
        <%= @book.title %>
      </p>

      <p>
        <strong>Category:</strong>
        <%= @book.category %>
      </p>

      <p>
        <strong>Year:</strong>
        <%= @book.year %>
      </p>
    </div>
  </div>
  <div class="card-footer">
    <%= link_to 'Edit', edit_book_path(@book), class: 'label label-primary' %> |
    <%= link_to 'Back', books_path, class: 'label label-primary' %>
  </div>
</div>